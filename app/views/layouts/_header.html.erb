<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("helpers.application_helper.title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("views.layouts.header.home"), "#" %></li>
        <li><%= link_to t("views.layouts.header.help"), "#" %></li>
        <% if logged_in? %>
          <li><%= link_to t("views.layouts.header.user"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("views.layouts.header.profile"),
                user_path(current_user) %></li>
              <li><%= link_to t("views.layouts.header.settings"),
                edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("views.layouts.header.logout"),
                  logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("views.layouts.header.linklogin"),
            login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
