<div class="row">
  <div class="col s5">
    <div class="card-panel teal">
      <span class="white-text">
        <h4>
          <%= @category.name %>
        </h4>
      </span>
    </div>
    <div class="card-panel">
      <div class="login">
        <%= link_to t("views.admin.categories.show.create_word"),
          new_admin_category_word_path(@category),
          class: "btn btn-lg btn-primary" %>
      </div>
    </div>
  </div>
  <div class="col s7">
    <div class="card-panel">
      <div class="login">
        </br>
        </br>
        <h1><%= t "views.admin.categories.show.list_word" %></h1>
        <div class="row">
          <div class="col s12">
            <%= render "admin/words/index_word" %>
          </div>
        </div>
      </div>
    </div>
</div>
</div>
